public class TripManagementSystem {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int num = 0;

        while (num != 6) {
            System.out.println("1. Add City");
            System.out.println("2. Delete City");
            System.out.println("3. Edit City");
            System.out.println("4. View Traver Route");
            System.out.println("5. Show a Traver Route");
            System.out.println("6. Exit");
            System.out.println("Select one number 1~6");
            num = input.nextInt();
            switch (num) {
            case 1:
                System.out.println("City to go : ");
                String city = input.next();
                for (int i = 1; i < 100; i++) {
                    System.out.println("Where do you want to go? : ");
                    String place = input.next();
                    if (place.equals("-")) {
                        break;
                    }
                }
                break;
            case 2:
                System.out.println("Selecet Place to Delete : ");
                break;
            case 3:
                System.out.println("View a Traver Route");
                break;
            case 4:
                System.out.println("Show a Traver Route");
                break;
            case 5:
                System.out.println("id");
                break;
            }

        }

    }

}
